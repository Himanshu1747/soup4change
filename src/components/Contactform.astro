        img.form-voteimage {
            right: 0;
            display: none;
        }
    }
</style>

<script is:inline src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>

<script is:inline src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>

<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    // 1. Configuration (IDs from your working example)
    const PUBLIC_KEY = "anQHxdNzZ5YbFbYiJ"; 
    const SERVICE_ID = "service_6mn1qpi";
    const OWNER_TEMPLATE_ID = "template_gdjebaa";
    const AUTOREPLY_TEMPLATE_ID = "template_o1uvef9";

    emailjs.init(PUBLIC_KEY);

    const form = document.getElementById("contact-form");
    const submitBtn = document.getElementById("submit-btn");

    // Logic from your old site: clear errors on typing
    form.querySelectorAll("input, textarea").forEach((input) => {
      input.addEventListener("input", () => {
        const errorEl = document.getElementById("err-" + input.name);
        if (errorEl) {
          errorEl.textContent = "";
          errorEl.style.display = "none";
        }
      });
    });

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      // 2. Capture Data (Mapping your new names to variables)
      const fullname = form.querySelector("input[name='fullname']").value.trim();
      const email = form.querySelector("input[name='email']").value.trim();
      const phone = form.querySelector("input[name='phone']").value.replace(/\D/g, "");
      const zip = form.querySelector("input[name='zip']").value.trim();
      const message = form.querySelector("textarea[name='message']").value.trim();

      // 3. Validation Logic (Taking the "return" idea from your old code)
      let isValid = true;

      if (!fullname) {
        showError("err-fullname", "Full name required");
        isValid = false;
      }
      if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        showError("err-email", "Valid email required");
        isValid = false;
      }
      if (phone.length < 10) {
        showError("err-phone", "10-digit phone required");
        isValid = false;
      }
      if (!zip) {
        showError("err-zip", "Zip required");
        isValid = false;
      }

      if (!isValid) return; // This stops the email from sending if validation fails

      // 4. Prepare Parameters (Must match your Template {{tags}})
      const params = {
        fullname: fullname,
        email: email,
        phone: phone,
        zip: zip,
        message: message,
        submitted_at: new Date().toLocaleString()
      };

      // 5. Sending UI
      submitBtn.disabled = true;
      submitBtn.textContent = "Sending...";

      emailjs.send(SERVICE_ID, OWNER_TEMPLATE_ID, params)
        .then(() => emailjs.send(SERVICE_ID, AUTOREPLY_TEMPLATE_ID, params))
        .then(() => {
          showError("form-status", "✅ Success! Message sent.", true);
          form.reset();
        })
        .catch((err) => {
          console.error(err);
          showError("form-status", "❌ Delivery failed. Check EmailJS dashboard.");
        })
        .finally(() => {
          submitBtn.disabled = false;
          submitBtn.textContent = "Submit the Form";
        });
    });

    function showError(id, msg, isSuccess = false) {
      const el = document.getElementById(id);
      if (el) {
        el.textContent = msg;
        el.style.display = "block";
        el.style.color = isSuccess ? "green" : "#ed2121";
      }
    }
  });
</script>