---
import { queryWordPress } from "../lib/wordpress";

const FORM_DATA_QUERY = `
query contactform {
  page(id: "contact", idType: URI) {
    contactForm {
      mainTitle
      contactParagraph
      formMainTitle
      contactVoteImage {
        node {
          mediaItemUrl
          altText
        }
      }
    }
  }
}
`;

const response = await queryWordPress(FORM_DATA_QUERY);
const contactData = response?.page?.contactForm;
const mainTitle = contactData?.mainTitle ?? "Get in Touch";
const contactParagraph = contactData?.contactParagraph ?? "";
const formTitle = contactData?.formMainTitle ?? "Contact Us";
const voteImage = contactData?.contactVoteImage?.node;
---

<section class="contactform-sec">
    <div class="container">
        <div class="row form-row">
            <div class="col-lg-6">
                <div class="formdetails">
                    <h4 class="fs-50">{mainTitle}</h4>
                    {contactParagraph && <div set:html={contactParagraph} />}
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-holders">
                    {
                        voteImage?.mediaItemUrl && (
                            <img
                                src={voteImage.mediaItemUrl}
                                alt={voteImage.altText || formTitle}
                                class="form-voteimage"
                                height="162"
                                width="162"
                                loading="lazy"
                                decoding="async"
                            />
                        )
                    }

                    <div class="main-formdata">
                        <div class="about-form">
                            <h6 class="fs-30">{formTitle}</h6>
                        </div>

                        <form id="contact-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <input
                                            type="text"
                                            name="fullname"
                                            placeholder="Full Name"
                                        />
                                        <p id="err-fullname" class="error-msg">
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <input
                                            type="email"
                                            name="email"
                                            placeholder="Email"
                                        />
                                        <p id="err-email" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="universa-input">
                                        <input
                                            type="tel"
                                            name="phone"
                                            placeholder="Contact"
                                        />
                                        <p id="err-phone" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="universa-input">
                                        <input
                                            type="text"
                                            name="zip"
                                            placeholder="Zip Code"
                                        />
                                        <p id="err-zip" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <textarea
                                            name="message"
                                            placeholder="Message"
                                            rows="6"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="submit-button">
                                        <button type="submit" id="submit-btn"
                                            >Submit the Form</button
                                        >
                                        <p id="form-status" class="error-msg">
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <style>
                            .error-text {
                                color: #ff4d4d;
                                font-size: 12px;
                                margin-top: 4px;
                                display: none; /* Hidden by default */
                            }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<style>
    .form-holders {
        max-width: 580px;
        width: 100%;
        margin: 0 auto;
        border-radius: 30px;
        background: rgba(63, 44, 188, 0.1);
        padding: 55px 45px;
        position: relative;
    }

    .universa-input input,
    .submit-button button {
        height: 50px;
        background: var(--color-white);
        border: none;
    }

    .universa-input input:focus-visible,
    .universa-input textarea:focus-visible {
        outline: none;
    }

    .universa-input input,
    .universa-input textarea {
        width: 100%;
        padding: 5px 20px;
        border: none;
        border-radius: 10px;
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    .universa-input input::-webkit-input-placeholder,
    .universa-input textarea::-webkit-input-placeholder {
        color: #d2d2d3;
    }

    .universa-input {
        margin-bottom: 20px;
    }

    .about-form {
        padding-bottom: 35px;
        position: relative;
        z-index: 1;
    }
    .submit-button button {
        width: 100%;
        border-radius: 10px;
        background: var(--color-blue);
        color: var(--color-white);
        text-align: center;
        font-size: 26px;
        font-weight: 700;
        line-height: normal;
        transition: 0.3s ease-in;
    }
    .submit-button button:hover {
        background: var(--color-red);
    }

    .form-voteimage {
        max-width: 162px;
        width: 100%;
        position: absolute;
        top: -9%;
        right: -13%;
    }

    .form-row {
        align-items: center;
    }
    section.contactform-sec {
        padding: 85px 0px;
    }
    .formdetails .fs-50 {
        color: var(--color-blue);
        padding-bottom: 20px;
    }

    .universa-input p {
    font-size: 16px !important;
    line-height: 2 !important;
    margin: 0 !important;
    padding: 0 !important;
}
    @media (max-width: 1600px) {
        .form-voteimage {
            max-width: 112px;
            top: -4%;
            right: -7%;
        }
        .form-holders {
            padding: 30px;
        }

        .about-form {
            max-width: 390px;
            width: 100%;
            padding-bottom: 20px;
        }
    }

    @media (max-width: 1400px) {
        .universa-input input,
        .submit-button button {
            height: 40px;
        }

        .universa-input input,
        .universa-input textarea,
        .submit-button button {
            font-size: 16px;
        }
        .universa-input input,
        .universa-input textarea {
            padding: 10px 15px;
        }

        section.contactform-sec {
            padding: 60px 0px;
        }
    }

    @media (max-width: 991px) {
        .formdetails {
            padding-bottom: 30px;
        }

        section.contactform-sec {
            padding: 40px 0px;
        }
    }

    @media (max-width: 575px) {
        img.form-voteimage {
            right: 0;
            display: none;
        }
    }
</style>

<script>
  // Dynamic import for high speed: Only loads EmailJS when needed
  const loadEmailJS = async () => {
    const { default: emailjs } = await import('@emailjs/browser');
    emailjs.init("anQHxdNzZ5YbFbYiJ");
    return emailjs;
  };

  const form = document.getElementById("contact-form");
  const submitBtn = document.getElementById("submit-btn");

  const showError = (id, message, isSuccess = false) => {
    const el = document.getElementById(id);
    if (!el) return;
    el.textContent = message;
    el.style.display = message ? "block" : "none";
    el.style.color = isSuccess ? "green" : "#ed2121";
  };

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    
    // UI Loading State
    submitBtn.disabled = true;
    submitBtn.textContent = "Sending...";
    
    // Clear previous errors
    ["err-fullname", "err-email", "err-phone", "err-zip", "form-status"].forEach(id => showError(id, ""));

    // 1. Efficient Data Capture
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    const phone = data.phone.replace(/\D/g, "");

    // 2. Validation Logic
    let isValid = true;
    if (!data.fullname) { showError("err-fullname", "Full name required"); isValid = false; }
    if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(data.email)) { showError("err-email", "Invalid email"); isValid = false; }
    if (phone.length < 10) { showError("err-phone", "Invalid phone"); isValid = false; }
    if (!data.zip) { showError("err-zip", "Zip required"); isValid = false; }

    if (!isValid) {
      submitBtn.disabled = false;
      submitBtn.textContent = "Submit the Form";
      return;
    }

    try {
      // 3. Lazy Load EmailJS only on click
      const emailjs = await loadEmailJS();

      const params = {
        ...data,
        phone,
        to_email: data.email,
        submitted_at: new Date().toLocaleString()
      };

      // 4. Parallel Performance: Send both emails simultaneously
      await Promise.all([
        emailjs.send("service_6mn1qpi", "template_gdjebaa", params),
        emailjs.send("service_6mn1qpi", "template_o1uvef9", params)
      ]);

      showError("form-status", "✅ Success! Message sent.", true);
      form.reset();
    } catch (err) {
      console.error("EmailJS Error:", err);
      showError("form-status", "❌ Failed to send. Try again.");
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = "Submit the Form";
    }
  });
</script>