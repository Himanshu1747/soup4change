---
import { queryWordPress } from "../lib/wordpress";

const FORM_DATA_QUERY = `
query contactform {
  page(id: "contact", idType: URI) {
    contactForm {
      mainTitle
      contactParagraph
      formMainTitle
      contactVoteImage {
        node {
          mediaItemUrl
          altText
        }
      }
    }
  }
}
`;

const response = await queryWordPress(FORM_DATA_QUERY);
const contactData = response?.page?.contactForm;
const mainTitle = contactData?.mainTitle ?? "Get in Touch";
const contactParagraph = contactData?.contactParagraph ?? "";
const formTitle = contactData?.formMainTitle ?? "Contact Us";
const voteImage = contactData?.contactVoteImage?.node;
---

<section class="contactform-sec">
    <div class="container">
        <div class="row form-row">
            <div class="col-lg-6">
                <div class="formdetails">
                    <h4 class="fs-50">{mainTitle}</h4>
                    {contactParagraph && <div set:html={contactParagraph} />}
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-holders">
                    {
                        voteImage?.mediaItemUrl && (
                            <img
                                src={voteImage.mediaItemUrl}
                                alt={voteImage.altText || formTitle}
                                class="form-voteimage"
                                height="162"
                                width="162"
                                loading="lazy"
                                decoding="async"
                            />
                        )
                    }

                    <div class="main-formdata">
                        <div class="about-form">
                            <h6 class="fs-30">{formTitle}</h6>
                        </div>

                        <form id="contact-form">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <input
                                            type="text"
                                            name="fullname"
                                            placeholder="Full Name"
                                        />
                                        <p
                                            id="err-fullname"
                                            class="error-msg"
                                            style="display:none; "
                                        >
                                        </p>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <input
                                            type="email"
                                            name="email"
                                            placeholder="Email"
                                        />
                                        <p id="err-email" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="universa-input">
                                        <input
                                            type="tel"
                                            name="phone"
                                            placeholder="Contact"
                                        />
                                        <p id="err-phone" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="universa-input">
                                        <input
                                            type="text"
                                            name="zip"
                                            placeholder="Zip Code"
                                        />
                                        <p id="err-zip" class="error-msg"></p>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="universa-input">
                                        <textarea
                                            name="message"
                                            placeholder="Message"
                                            rows="6"></textarea>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="submit-button">
                                        <button type="submit" id="submit-btn"
                                            >Submit the Form</button
                                        >
                                        <p id="form-status" class="error-msg">
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <style>
                            .error-text {
                                color: #ff4d4d;
                                font-size: 12px;
                                margin-top: 4px;
                                display: none; /* Hidden by default */
                            }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .form-holders {
        max-width: 580px;
        width: 100%;
        margin: 0 auto;
        border-radius: 30px;
        background: rgba(63, 44, 188, 0.1);
        padding: 55px 45px;
        position: relative;
    }

    .universa-input input,
    .submit-button button {
        height: 50px;
        background: var(--color-white);
        border: none;
    }

    .universa-input input:focus-visible,
    .universa-input textarea:focus-visible {
        outline: none;
    }

    .universa-input input,
    .universa-input textarea {
        width: 100%;
        padding: 5px 20px;
        border: none;
        border-radius: 10px;
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }

    .universa-input input::-webkit-input-placeholder,
    .universa-input textarea::-webkit-input-placeholder {
        color: #d2d2d3;
    }

    .universa-input {
        margin-bottom: 20px;
    }

    .about-form {
        padding-bottom: 35px;
        position: relative;
        z-index: 1;
    }
    .submit-button button {
        width: 100%;
        border-radius: 10px;
        background: var(--color-blue);
        color: var(--color-white);
        text-align: center;
        font-size: 26px;
        font-weight: 700;
        line-height: normal;
        transition: 0.3s ease-in;
    }
    .submit-button button:hover {
        background: var(--color-red);
    }

    .form-voteimage {
        max-width: 162px;
        width: 100%;
        position: absolute;
        top: -9%;
        right: -13%;
    }

    .form-row {
        align-items: center;
    }
    section.contactform-sec {
        padding: 85px 0px;
    }
    .formdetails .fs-50 {
        color: var(--color-blue);
        padding-bottom: 20px;
    }

    .universa-input p {
        font-size: 16px !important;
        line-height: 16px !important;
        margin: 0 !important;
        padding: 0 !important;
    }
    .submit-button p {
        font-size: 20px !important;
        padding-top: 10px !important;
    }
    @media (max-width: 1600px) {
        .form-voteimage {
            max-width: 112px;
            top: -4%;
            right: -7%;
        }
        .form-holders {
            padding: 30px;
        }

        .about-form {
            max-width: 390px;
            width: 100%;
            padding-bottom: 20px;
        }
    }

    @media (max-width: 1400px) {
        .universa-input input,
        .submit-button button {
            height: 40px;
        }

        .universa-input input,
        .universa-input textarea,
        .submit-button button {
            font-size: 16px;
        }
        .universa-input input,
        .universa-input textarea {
            padding: 10px 15px;
        }

        section.contactform-sec {
            padding: 60px 0px;
        }
    }

    @media (max-width: 991px) {
        .formdetails {
            padding-bottom: 30px;
        }

        section.contactform-sec {
            padding: 40px 0px;
        }
    }

    @media (max-width: 575px) {
        img.form-voteimage {
            right: 0;
            display: none;
        }
    }
</style>

<script
    type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"
></script>


<script client:load>
  (() => {
    const waitForEmailJS = () => {
      return new Promise((resolve) => {
        const check = () => {
          if (window.emailjs) resolve();
          else setTimeout(check, 50);
        };
        check();
      });
    };

    const init = async () => {
      await waitForEmailJS();

      const PUBLIC_KEY = "anQHxdNzZ5YbFbYiJ";
      const SERVICE_ID = "service_6mn1qpi";
      const OWNER_TEMPLATE_ID = "template_gdjebaa";
      const AUTOREPLY_TEMPLATE_ID = "template_o1uvef9";

      emailjs.init(PUBLIC_KEY);

      const form = document.getElementById("contact-form");
      const submitBtn = document.getElementById("submit-btn");

      if (!form || !submitBtn) return;

      const updateError = (id, msg = "", show = false) => {
        const el = document.getElementById(id);
        if (!el) return;
        el.textContent = msg;
        el.style.display = show ? "block" : "none";
      };

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        ["err-fullname", "err-email", "err-phone", "err-zip", "form-status"]
          .forEach(id => updateError(id));

        const fullname = form.fullname.value.trim();
        const email = form.email.value.trim();
        const phone = form.phone.value.replace(/\D/g, "");
        const zip = form.zip.value.trim();
        const message = form.message.value.trim();

        let valid = true;

        if (!fullname) {
          updateError("err-fullname", "Full name is required", true);
          valid = false;
        }
        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
          updateError("err-email", "Valid email required", true);
          valid = false;
        }
        if (phone.length < 10) {
          updateError("err-phone", "10-digit phone required", true);
          valid = false;
        }
        if (!zip) {
          updateError("err-zip", "Zip code required", true);
          valid = false;
        }

        if (!valid) return;

        submitBtn.disabled = true;
        submitBtn.textContent = "Sending...";

        const params = {
          fullname,
          email,
          phone,
          zip,
          message,
          submitted_at: new Date().toLocaleString()
        };

        try {
          await emailjs.send(SERVICE_ID, OWNER_TEMPLATE_ID, params);
          await emailjs.send(SERVICE_ID, AUTOREPLY_TEMPLATE_ID, params);

          updateError("form-status", "✅ Message sent successfully!", true);
          document.getElementById("form-status").style.color = "green";
          form.reset();
        } catch (err) {
          console.error(err);
          updateError("form-status", "❌ Failed to send. Try again.", true);
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = "Submit the Form";
        }
      });
    };

    init();
  })();
</script>
