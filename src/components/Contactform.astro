        .form-voteimage {
            max-width: 112px;
            top: -4%;
            right: -7%;
        }
        .form-holders {
            padding: 30px;
        }

        .about-form {
            max-width: 390px;
            width: 100%;
            padding-bottom: 20px;
        }
    }

    @media (max-width: 1400px) {
        .universa-input input,
        .submit-button button {
            height: 40px;
        }

        .universa-input input,
        .universa-input textarea,
        .submit-button button {
            font-size: 16px;
        }
        .universa-input input,
        .universa-input textarea {
            padding: 10px 15px;
        }

        section.contactform-sec {
            padding: 60px 0px;
        }
    }

    @media (max-width: 991px) {
        .formdetails {
            padding-bottom: 30px;
        }

        section.contactform-sec {
