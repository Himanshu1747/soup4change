            canonical={page?.seo?.canonical}
            focuskw={page?.seo?.focuskw}
        />
        {page?.seo?.fullHead && <Fragment set:html={page.seo.fullHead} />}

        {
            videoPoster && (
                <link
                    rel="preload"
                    as="image"
                    href={videoPoster}
                    fetchpriority="high"
                />
            )
        }
        {
            videoUrl && (
                <link
                    rel="preload"
                    as="video"
                    href={videoUrl}
                    crossorigin="anonymous"
                    fetchpriority="high"
                />
            )
        }

        <style>
            .home-video {
